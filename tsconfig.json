  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "module": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
